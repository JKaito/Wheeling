<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Your existing base app theme -->
    <style name="Base.Theme.Wheeling" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#151BC7</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">default</item>
    </style>

    <!-- Normal app theme -->
    <style name="Theme.Wheeling" parent="Base.Theme.Wheeling"/>

    <!-- NEW: real splash theme -->
    <style name="Theme.Wheeling.Splash" parent="Theme.SplashScreen">
        <!-- background behind the icon -->
        <item name="windowSplashScreenBackground">#5BB0FF</item>
        <!-- big center icon (use your logo or ic_minimap) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/wheelinglogofull</item>
        <!-- theme to apply after splash -->
        <item name="postSplashScreenTheme">@style/Theme.Wheeling</item>
    </style>
</resources>
