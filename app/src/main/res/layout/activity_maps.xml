<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your map + UI overlay -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Google Map fragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/search_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@drawable/search_background"
            android:gravity="center_vertical"
            android:elevation="4dp"
            android:clipToPadding="false">

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="@string/search_hint"
                android:inputType="text"
                android:autofillHints="username"
                android:background="@android:color/transparent"
                android:paddingHorizontal="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:textSize="16sp"
                android:importantForAutofill="yes" />
        </LinearLayout>

        <!-- Filter Buttons -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_bar_container"
            android:layout_marginHorizontal="16dp"
            android:padding="8dp"
            android:fillViewport="true"
            android:background="@android:color/transparent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/food_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_food"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_food"
                    app:iconGravity="textStart"
                    android:textAllCaps="false"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/drink_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_drinks"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_drinks"
                    app:iconGravity="textStart"
                    android:textAllCaps="false"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/coffee_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_coffee"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_coffee"
                    app:iconGravity="textStart"
                    android:textAllCaps="false"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/hotel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_hotels"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_hotels"
                    app:iconGravity="textStart"
                    android:textAllCaps="false"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/museum_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_museum"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_museum"
                    android:textAllCaps="false"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/public_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_public"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_services"
                    android:textAllCaps="false"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shop_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/FilterButtonStyle"
                    android:text="@string/filter_shop"
                    app:iconTint="@color/white"
                    app:icon="@drawable/ic_shop"
                    app:iconGravity="textStart"
                    android:textAllCaps="false"
                    app:iconPadding="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Location Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/myLocation"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/profile_button_description"
            app:cardCornerRadius="200dp"
            app:cardBackgroundColor="#4B5057">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gps_fixed"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!-- Bottom Sheet must be a direct child of CoordinatorLayout -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="80dp"
        app:behavior_fitToContents="false"
        app:behavior_expandedOffset="350dp">

        <!-- Static gray container (never scrolls) -->
        <FrameLayout
            android:id="@+id/sheet_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#464D56"
            android:paddingHorizontal="15dp"
            android:paddingTop="30dp"
            android:paddingBottom="60dp"
            android:elevation="8dp">

            <!-- ONLY this RecyclerView scrolls -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/result_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:paddingBottom="110dp"/>

            <!-- Your detail card, fully static -->
            <include
                android:id="@+id/detail_container"
                layout="@layout/detail_card_item"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/chat_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_gravity="top"
        android:visibility="gone"
        android:elevation="16dp">

        <include layout="@layout/chat_activity" />
    </FrameLayout>

    <!-- Bottom Navigation Bar - fixed at bottom -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:elevation="12dp">

        <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_wheelchair"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:contentDescription="@string/profile_button_description">

            <ImageButton
                android:id="@+id/icon_wheelchair"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_wheelchair"
                android:scaleType="centerInside"
                android:contentDescription="@string/nav_wheelchair"
                android:clickable="false"
                android:focusable="false" />
        </androidx.cardview.widget.CardView>

        <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_car"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:contentDescription="@string/profile_button_description">

            <ImageButton
                android:id="@+id/icon_car"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_car"
                android:scaleType="centerInside"
                android:contentDescription="@string/nav_car"
                android:clickable="false"
                android:focusable="false" />
        </androidx.cardview.widget.CardView>

        <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_walk"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:contentDescription="@string/profile_button_description">

            <ImageButton
                android:id="@+id/icon_card_walk"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_walk"
                android:scaleType="centerInside"
                android:contentDescription="@string/nav_walk"
                android:clickable="false"
                android:focusable="false" />
        </androidx.cardview.widget.CardView>

        <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_home"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:contentDescription="@string/profile_button_description">

            <ImageButton
                android:id="@+id/icon_home"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_home"
                android:scaleType="centerInside"
                android:contentDescription="@string/nav_home"
                android:clickable="false"
                android:focusable="false" />
        </androidx.cardview.widget.CardView>

        <Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
